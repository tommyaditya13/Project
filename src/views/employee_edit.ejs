<% include partials/_header %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/employee/update/<%= data.employee_id %>" method="post"  enctype="multipart/form-data">
                        <div class="form-group">
                            <input type="text" name="employee_name" value="<%= data.employee_name %>" class="form-control"
                                required>
                        </div>
                        <div class="form-check form-check-inline ml-2">
                            <label class="mt-1" for="exampleFormControlInput1">Gender</label>

                            <input name="employee_gender" id="employee_gender" class="form-check-input ml-3" type="radio" value="<%= data.employee_gender %>">
                            <label class="form-check-label" for="inlineRadio1">Male</label>

                            <input name="employee_gender" id="employee_gender" class="form-check-input ml-3" type="radio" value="<%= data.employee_gender %>">
                            <label class="form-check-label" for="inlineRadio2">Female</label>
                        </div>
                        <div class="form-group mt-2">
                            <div class='input-group date' id='employee_birthday'>
                                <input type='date' name="employee_birthday" class="form-control" value="<%= data.employee_birthday %>"
                                    required />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                            </div>
                        </div>
                        <div class="custom-file mt-2">
                            <input type="file" class="form-control-file upload-image" id="image" name="employee_picture"
                                accept="image/*" for="content_image" value="<%= data.employee_picture %>" required />
                            <label class="custom-file-label" for="image">Picture</label>
                        </div>
                        <div class="form-group mt-5">
                                <input type="number" name="employee_phone"  value="<%= data.employee_phone %>" class="form-control" required>
                        </div>

                        <button type="submit" class="btn btn-primary">
                            Edit Employee
                        </button>
        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<% include partials/_footer %>